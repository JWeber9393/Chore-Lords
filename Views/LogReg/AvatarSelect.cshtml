@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <div class="container-fluid">
        <div class="row">
            <form asp-action="ProcessAvatar" asp-controller="LogRegController" method="post">
                <div class="form-group">
                    <label for="AvatarFuckinClassBro">Choose your Avatar:</label>
                    <select name="AvatarFuckinClassBro">
                        <option value="Gladiator">Gladiator</option>
                        <option value="Samurai">Samurai</option>
                        <option value="Viking">Viking</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">What is your Avatar's Name?</label>
                    <input type="text" name="name">
                </div>
                    <br>
                    <button type="submit" class="btn btn-primary form-control">Register</button>
                </div>
            </form>  
        </div>
    </div>
</div>