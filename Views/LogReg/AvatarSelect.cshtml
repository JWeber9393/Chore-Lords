@model AvatarSelectViewModel
<div class="text-center">
    <div class="container-fluid">
        <div class="row">

            <form asp-controller="LogReg" asp-action="CreateGladiator" method="post">
                <div class="form-group">
                    <label name="name">What is your Gladiator's Name?</label>
                    <input asp-for="@Model.Name">
                    <button>Select Gladiator</button>
                </div>
            </form>
            <br>
            <form asp-controller="LogReg" asp-action="CreateSamurai" method="post">
                <div class="form-group">
                    <label name="name">What is your Samurai's Name?</label>
                    <input asp-for="@Model.Name">
                    <button>Select Samurai</button>
                </div>
            </form>
            <br>
            <form asp-controller="LogReg" asp-action="CreateViking" method="post">
                <div class="form-group">
                    <label name="name">What is your Viking's Name?</label>
                    <input asp-for="@Model.Name">
                    <button>Select Viking</button>
                </div>
            </form>
        </div>
    </div>
</div>