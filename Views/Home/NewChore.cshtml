@using ChoreLords.Models
@model Chore

@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <div class="container-fluid">
        <div class="row">

            <form asp-action="CreateChore" asp-controller="Home" method="post">


                <h1>What ist thine request?</h1>
                
                <div class="form-group">
                    <span asp-validation-for="@Model.Title" class="text-danger" ></span>
                    <label asp-for="@Model.Title"></label>
                    <input asp-for="@Model.Title" class="form-control">
                    
                    <span asp-validation-for="@Model.Money" class="text-danger" ></span>
                    <label>Reward :</label>
                    <input asp-for="@Model.Money" class="form-control">
                    

                    <span asp-validation-for="@Model.JobXp" class="text-danger"></span>
                    <label asp-for="@Model.JobXp"></label>
                    <input asp-for="@Model.JobXp" class="form-control">

                    <textarea asp-for="@Model.Description" cols="50" rows="5"></textarea>
                    
                    <!-- TODO: Add hidden fields -->

                    <br>
                    <button type="submit" class="btn btn-primary form-control">Create Chore</button>
                </div>
            </form>
            <!-- ViewBag unneccessary due to return View() in controller? -->
            <!-- <h3 class="text-danger">@ViewBag.ErrorMessage</h3> -->
        </div>
    </div>
</div>